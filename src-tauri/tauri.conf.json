{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "instant-key",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "show": true,
        "hide": true,
        "setFocus": true,
        "setSize": true,
        "center": true,
        "setSkipTaskbar": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/**",
          "$APPDATA/*",
          "$APPDATA/",
          "$APPDATA"
        ]
      },
      "shell": {
        "execute": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "instant-key",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": false,
        "title": "",
      
        "decorations": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      }
    ]
  }
}
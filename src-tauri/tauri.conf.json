{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "instant-key",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "show": true,
        "hide": true,
        "setFocus": true,
        "setSize": true,
        "center": true,
        "setSkipTaskbar": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "",
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      }
    ]
  }
}